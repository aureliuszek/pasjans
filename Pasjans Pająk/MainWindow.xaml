            <Image/>
        </Border>
        <!--Główne karty-->
        <Border AllowDrop ="True" x:Name="MainStack1" BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="160" Margin="20,360,0,0" VerticalAlignment="Top" Width="100">
            <Image/>
        </Border>
        <Border x:Name="MainStack2" BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="160" Margin="140,360,0,0" VerticalAlignment="Top" Width="100">
